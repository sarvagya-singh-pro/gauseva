rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Doctors collection (your existing data)
    match /doctors/{doctorEmail} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.email == doctorEmail;
    }
    
    // Meetings collection (your existing data)
    match /meetings/{meetingId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Cattle collection
    match /cattle/{cattleId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && 
        resource.data.ownerId == request.auth.uid;
    }
    
    // Vital signs
    match /vitalSigns/{vitalId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Diagnoses
    match /diagnoses/{diagnosisId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Consultations
    match /consultations/{consultId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
